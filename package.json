{
  "name": "ralph-starter",
  "version": "0.1.0",
  "description": "Ralph Wiggum made easy. One command to run autonomous AI coding loops with auto-commit, PRs, and Docker sandbox.",
  "main": "dist/index.js",
  "bin": {
    "ralph-starter": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "ralph-wiggum",
    "claude-code",
    "ai",
    "autonomous",
    "coding",
    "loop",
    "orchestrator",
    "cursor",
    "codex",
    "opencode",
    "cli"
  ],
  "author": "Ruben Marcus <ruben@rubenmarcus.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubenmarcus/ralph-starter"
  },
  "homepage": "https://github.com/rubenmarcus/ralph-starter#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "commander": "^12.1.0",
    "execa": "^9.5.2",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.3.2",
    "ora": "^8.1.1",
    "pdf-parse": "^1.1.1",
    "simple-git": "^3.27.0",
    "yaml": "^2.7.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
