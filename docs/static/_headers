# Cloudflare Pages headers
# https://developers.cloudflare.com/pages/configuration/headers/

# Serve markdown files with correct content type for LLM access
/*.md
  Content-Type: text/markdown; charset=utf-8
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

/docs/*.md
  Content-Type: text/markdown; charset=utf-8
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

/docs/**/*.md
  Content-Type: text/markdown; charset=utf-8
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

# LLM documentation files
/llms.txt
  Content-Type: text/plain; charset=utf-8
  X-Content-Type-Options: nosniff

/llms-full.txt
  Content-Type: text/plain; charset=utf-8
  X-Content-Type-Options: nosniff

/docs-urls.txt
  Content-Type: text/plain; charset=utf-8
  X-Content-Type-Options: nosniff

# JSON manifest for LLM crawlers (Firecrawl-style)
/docs.json
  Content-Type: application/json; charset=utf-8
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

# AI index for RAG systems
/ai-index.json
  Content-Type: application/json; charset=utf-8
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

# Sidebar hierarchy as JSON
/sidebar.json
  Content-Type: application/json; charset=utf-8
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

# Allow AI crawlers to access documentation
/*
  X-Robots-Tag: index, follow
